{
  "name": "@contractspec/lib.translation-studio",
  "version": "0.0.1",
  "scripts": {
    "clean": "rimraf dist .turbo",
    "build": "bun build:types && bun build:bundle",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "i18n:generate": "i18next-cli extract"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "react-native": "./dist/native/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./native": "./dist/native/index.js",
    "./web": "./dist/web/index.js",
    "./*": "./*"
  },
  "devDependencies": {
    "@contractspec/lib.utils-typescript": "workspace:*",
    "@contractspec/tool.tsdown": "workspace:*",
    "@contractspec/tool.typescript": "workspace:*",
    "i18next-cli": "^1.11.11",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-i18next": "16.5.0",
    "i18next": ">25.5.2"
  },
  "dependencies": {
    "i18next": "^25.5.2",
    "react-i18next": "16.5.0"
  },
  "type": "module",
  "module": "./dist/index.js",
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./native": "./dist/native/index.js",
      "./web": "./dist/web/index.js",
      "./*": "./*"
    }
  }
}
