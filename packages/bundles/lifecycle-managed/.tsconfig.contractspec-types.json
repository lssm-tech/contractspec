{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@contractspec/lib.ai-agent": [
        "../../libs/ai-agent/dist/index.d.ts"
      ],
      "@contractspec/lib.ai-agent/*": [
        "../../libs/ai-agent/dist/*"
      ],
      "@contractspec/lib.analytics": [
        "../../libs/analytics/dist/index.d.ts"
      ],
      "@contractspec/lib.analytics/*": [
        "../../libs/analytics/dist/*"
      ],
      "@contractspec/lib.lifecycle": [
        "../../libs/lifecycle/dist/index.d.ts"
      ],
      "@contractspec/lib.lifecycle/*": [
        "../../libs/lifecycle/dist/*"
      ],
      "@contractspec/lib.observability": [
        "../../libs/observability/dist/index.d.ts"
      ],
      "@contractspec/lib.observability/*": [
        "../../libs/observability/dist/*"
      ],
      "@contractspec/module.lifecycle-advisor": [
        "../../modules/lifecycle-advisor/dist/index.d.ts"
      ],
      "@contractspec/module.lifecycle-advisor/*": [
        "../../modules/lifecycle-advisor/dist/*"
      ],
      "@contractspec/module.lifecycle-core": [
        "../../modules/lifecycle-core/dist/index.d.ts"
      ],
      "@contractspec/module.lifecycle-core/*": [
        "../../modules/lifecycle-core/dist/*"
      ],
      "@contractspec/tool.typescript/*": [
        "../../tools/typescript/dist/*"
      ],
      "@contractspec/tool.bun/*": [
        "../../tools/bun/dist/*"
      ]
    }
  }
}
