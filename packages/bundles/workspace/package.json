{
  "name": "@contractspec/bundle.workspace",
  "version": "1.57.0",
  "description": "Workspace utilities for monorepo development",
  "keywords": [
    "contractspec",
    "workspace",
    "monorepo",
    "typescript",
    "development"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "dev": "contractspec-bun-build dev",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "bun test",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "catalog:ai",
    "@ai-sdk/openai": "catalog:ai",
    "@contractspec/lib.ai-agent": "workspace:*",
    "@contractspec/lib.ai-providers": "workspace:*",
    "@contractspec/lib.contracts": "workspace:*",
    "@contractspec/lib.contracts-transformers": "workspace:*",
    "@contractspec/lib.source-extractors": "workspace:*",
    "@contractspec/module.workspace": "workspace:*",
    "@contractspec/lib.utils-typescript": "workspace:*",
    "ai": "catalog:ai",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "glob": "catalog:build",
    "micromatch": "^4.0.8",
    "ollama-ai-provider": "catalog:ai",
    "ora": "^9.3.0",
    "ts-morph": "^27.0.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "@types/bun": "^1.3.8",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.2.1",
    "typescript": "catalog:",
    "@contractspec/tool.bun": "workspace:*"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.mjs",
        "default": "./dist/index.js"
      }
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/bundles/contractspec-workspace"
  },
  "homepage": "https://contractspec.io"
}
