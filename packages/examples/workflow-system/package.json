{
  "name": "@lssm/example.workflow-system",
  "version": "1.0.0",
  "description": "Workflow and approval system example for ContractSpec - State machine with role-based transitions",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "dependencies": {
    "@lssm/lib.schema": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.bus": "workspace:*",
    "@lssm/lib.identity-rbac": "workspace:*",
    "@lssm/lib.feature-flags": "workspace:*",
    "@lssm/lib.jobs": "workspace:*",
    "@lssm/module.audit-trail": "workspace:*",
    "@lssm/module.notifications": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": "./dist/index.js",
    "./contracts": "./dist/contracts/index.js",
    "./contracts/approval": "./dist/contracts/approval.js",
    "./contracts/instance": "./dist/contracts/instance.js",
    "./contracts/workflow": "./dist/contracts/workflow.js",
    "./entities": "./dist/entities/index.js",
    "./entities/approval": "./dist/entities/approval.js",
    "./entities/instance": "./dist/entities/instance.js",
    "./entities/step": "./dist/entities/step.js",
    "./entities/workflow": "./dist/entities/workflow.js",
    "./events": "./dist/events.js",
    "./feature": "./dist/feature.js",
    "./handlers": "./dist/handlers/index.js",
    "./presentations": "./dist/presentations/index.js",
    "./state-machine": "./dist/state-machine/index.js",
    "./*": "./*"
  },
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./entities": "./dist/entities/index.js",
      "./entities/workflow": "./dist/entities/workflow.js",
      "./entities/step": "./dist/entities/step.js",
      "./entities/instance": "./dist/entities/instance.js",
      "./entities/approval": "./dist/entities/approval.js",
      "./contracts": "./dist/contracts/index.js",
      "./contracts/workflow": "./dist/contracts/workflow.js",
      "./contracts/instance": "./dist/contracts/instance.js",
      "./contracts/approval": "./dist/contracts/approval.js",
      "./events": "./dist/events.js",
      "./feature": "./dist/feature.js",
      "./handlers": "./dist/handlers/index.js",
      "./presentations": "./dist/presentations/index.js",
      "./state-machine": "./dist/state-machine/index.js",
      "./*": "./*"
    }
  }
}
