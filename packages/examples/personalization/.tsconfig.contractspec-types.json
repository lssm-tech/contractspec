{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@contractspec/lib.personalization": [
        "../../libs/personalization/dist/index.d.ts"
      ],
      "@contractspec/lib.personalization/*": [
        "../../libs/personalization/dist/*"
      ],
      "@contractspec/lib.overlay-engine": [
        "../../libs/overlay-engine/dist/index.d.ts"
      ],
      "@contractspec/lib.overlay-engine/*": [
        "../../libs/overlay-engine/dist/*"
      ],
      "@contractspec/lib.workflow-composer": [
        "../../libs/workflow-composer/dist/index.d.ts"
      ],
      "@contractspec/lib.workflow-composer/*": [
        "../../libs/workflow-composer/dist/*"
      ],
      "@contractspec/lib.contracts-spec": [
        "../../libs/contracts-spec/dist/index.d.ts"
      ],
      "@contractspec/lib.contracts-spec/*": [
        "../../libs/contracts-spec/dist/*"
      ],
      "@contractspec/lib.logger": [
        "../../libs/logger/dist/index.d.ts"
      ],
      "@contractspec/lib.logger/*": [
        "../../libs/logger/dist/*"
      ],
      "@contractspec/tool.typescript/*": [
        "../../tools/typescript/dist/*"
      ],
      "@contractspec/tool.bun/*": [
        "../../tools/bun/dist/*"
      ]
    }
  }
}
