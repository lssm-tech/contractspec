{
  "name": "@lssm/example.crm-pipeline",
  "version": "1.0.0",
  "description": "CRM Pipeline - Contacts, Companies, Deals, Tasks",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./entities": {
      "import": "./dist/entities/index.js",
      "types": "./dist/entities/index.d.ts"
    },
    "./contracts": {
      "import": "./dist/contracts/index.js",
      "types": "./dist/contracts/index.d.ts"
    },
    "./events": {
      "import": "./dist/events.js",
      "types": "./dist/events.d.ts"
    },
    "./handlers": {
      "import": "./dist/handlers/index.js",
      "types": "./dist/handlers/index.d.ts"
    },
    "./presentations": {
      "import": "./dist/presentations/index.js",
      "types": "./dist/presentations/index.d.ts"
    },
    "./feature": {
      "import": "./dist/feature.js",
      "types": "./dist/feature.d.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "db:generate": "database schema:generate",
    "db:migrate": "database migrate:dev"
  },
  "dependencies": {
    "@lssm/lib.schema": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.bus": "workspace:*",
    "@lssm/lib.identity-rbac": "workspace:*",
    "@lssm/lib.jobs": "workspace:*",
    "@lssm/module.audit-trail": "workspace:*",
    "@lssm/module.notifications": "workspace:*",
    "zod": "^4.1.13"
