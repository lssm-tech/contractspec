{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@contractspec/lib.identity-rbac": [
        "../../libs/identity-rbac/dist/index.d.ts"
      ],
      "@contractspec/lib.identity-rbac/*": [
        "../../libs/identity-rbac/dist/*"
      ],
      "@contractspec/lib.schema": [
        "../../libs/schema/dist/index.d.ts"
      ],
      "@contractspec/lib.schema/*": [
        "../../libs/schema/dist/*"
      ],
      "@contractspec/lib.contracts": [
        "../../libs/contracts/dist/index.d.ts"
      ],
      "@contractspec/lib.contracts/*": [
        "../../libs/contracts/dist/*"
      ],
      "@contractspec/module.audit-trail": [
        "../../modules/audit-trail/dist/index.d.ts"
      ],
      "@contractspec/module.audit-trail/*": [
        "../../modules/audit-trail/dist/*"
      ],
      "@contractspec/module.notifications": [
        "../../modules/notifications/dist/index.d.ts"
      ],
      "@contractspec/module.notifications/*": [
        "../../modules/notifications/dist/*"
      ],
      "@contractspec/tool.typescript/*": [
        "../../tools/typescript/dist/*"
      ],
      "@contractspec/tool.bun/*": [
        "../../tools/bun/dist/*"
      ]
    }
  }
}
