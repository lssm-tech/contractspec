{
  "name": "@lssm/app.api-contractspec",
  "version": "1.0.50",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/server.ts",
    "export-schema": "bun run src/graphql/schema-export.ts",
    "ssl:gen": "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout certs/key.pem -out certs/cert.pem -config local/openssl.cnf",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
    "start": "./server"
  },
  "dependencies": {
    "@lssm/bundle.contractspec-studio": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "elysia": "^1.4.18"
  },
  "devDependencies": {},
  "module": "src/index.ts",
  "type": "module"
}
