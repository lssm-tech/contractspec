{
  "name": "@lssm/app.cli-mcp-local",
  "version": "0.1.0",
  "description": "Local MCP server for ContractSpec operations via stdio transport",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "contractspec-mcp": "./dist/cli.js"
  },
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun run build:node && bun run build:types",
    "build:node": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node --minify",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@lssm/bundle.contractspec-workspace": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.contracts-transformers": "workspace:*",
    "@lssm/lib.logger": "workspace:*",
    "@lssm/lib.schema": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@types/node": "^22.10.2",
    "rimraf": "^6.1.2",
    "eslint": "^9.39.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "contracts",
    "ai",
    "typescript",
    "cursor",
    "claude"
  ],
  "publishConfig": {
    "access": "public"
  }
}
