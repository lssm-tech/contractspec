{
  "name": "@lssm/app.cli-contracts",
  "version": "0.12.0",
  "description": "CLI tool for creating, building, and validating contract specifications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "contractspec": "./dist/cli.js"
  },
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun build ./src/cli.ts --outfile ./dist/cli.js --target bun --minify && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun build ./src/cli.ts --outfile ./dist/cli.js --target bun --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@lssm/bundle.contractspec-workspace": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.testing": "workspace:*",
    "@lssm/lib.schema": "workspace:*",
    "@lssm/module.contractspec-examples": "workspace:*",
    "commander": "^14.0.2",
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2",
    "ora": "^9.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@types/node": "^22.10.2",
    "rimraf": "^6.1.2",
    "eslint": "^9.39.2"
  },
  "keywords": [
    "cli",
    "contracts",
    "code-generation",
    "ai",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  }
}
