{
  "name": "@lssm/app.cli-contracts",
  "version": "1.41.1",
  "description": "CLI tool for creating, building, and validating contract specifications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "contractspec": "./dist/cli.js"
  },
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run build:node && bun run build:types",
    "build:bun": "bun build ./src/cli.ts --outfile ./dist/cli.bun.js --target bun --minify",
    "build:node": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node --minify",
    "build:all": "bun run build:bun && bun run build:node && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node --watch",
    "dev:bun": "bun build ./src/cli.ts --outfile ./dist/cli.bun.js --target bun --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "ai": "catalog:ai",
    "@ai-sdk/anthropic": "catalog:ai",
    "@ai-sdk/google": "catalog:ai",
    "@ai-sdk/mistral": "catalog:ai",
    "@ai-sdk/openai": "catalog:ai",
    "ollama-ai-provider": "catalog:ai",
    "@lssm/bundle.contractspec-workspace": "workspace:*",
    "@lssm/lib.ai-providers": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.contracts-transformers": "workspace:*",
    "@lssm/lib.testing": "workspace:*",
    "@lssm/lib.schema": "workspace:*",
    "@lssm/module.ai-chat": "workspace:*",
    "@lssm/module.contractspec-examples": "workspace:*",
    "glob": "catalog:build",
    "commander": "^14.0.2",
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2",
    "ora": "^9.0.0",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "workspace:*",
    "@lssm/tool.typescript": "workspace:*",
    "@types/node": "^22.10.2",
    "rimraf": "catalog:build",
    "eslint": "catalog:build"
  },
  "keywords": [
    "cli",
    "contracts",
    "code-generation",
    "ai",
    "typescript"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/apps/cli-contracts"
  }
}
