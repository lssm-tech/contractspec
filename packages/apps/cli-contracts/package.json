{
  "name": "@lssm/app.cli-contracts",
  "version": "0.7.4",
  "description": "CLI tool for creating, building, and validating contract specifications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "contractspec": "./dist/cli.js"
  },
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/app.cli-database": "workspace:*",
    "@lssm/lib.testing": "workspace:*",
    "@lssm/lib.schema": "workspace:*",
    "ai": "^5.0.98",
    "@ai-sdk/anthropic": "^2.0.45",
    "@ai-sdk/openai": "^2.0.71",
    "ollama-ai-provider": "^1.2.0",
    "commander": "^14.0.2",
    "@inquirer/prompts": "^8.0.2",
    "chalk": "^5.6.2",
    "ora": "^9.0.0",
    "zod": "^4.1.12",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "vitest": "^1.6.0",
    "rimraf": "^6.1.2",
    "eslint": "^9.17.0"
  },
  "keywords": [
    "cli",
    "contracts",
    "code-generation",
    "ai",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  }
}
