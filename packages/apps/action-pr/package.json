{
  "name": "@contractspec/action.pr",
  "version": "0.1.0",
  "description": "GitHub Action for ContractSpec PR checks",
  "scripts": {
    "build": "bun build src/report.ts --outdir dist --target node --format cjs",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src/report.ts src/report.test.ts --fix",
    "lint:check": "eslint src/report.ts src/report.test.ts",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/apps/action-pr"
  },
  "keywords": [
    "github-action",
    "contractspec",
    "pr",
    "drift",
    "validation"
  ],
  "author": "LSSM",
  "license": "MIT",
  "dependencies": {
    "@contractspec/lib.contracts": "workspace:*",
    "@contractspec/bundle.workspace": "workspace:*"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.0.6",
    "eslint": "^9.39.2",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://contractspec.io"
}
