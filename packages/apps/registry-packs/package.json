{
  "name": "@contractspec/app.registry-packs",
  "version": "0.3.0",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --minify-whitespace --minify-syntax --target bun --outfile dist/index.js src/index.ts",
    "start": "bun run ./dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:generate:pg": "drizzle-kit generate --config=drizzle-pg.config.ts",
    "db:migrate:pg": "drizzle-kit migrate --config=drizzle-pg.config.ts",
    "db:seed": "bun run src/db/seed.ts",
    "test": "bun test --pass-with-no-tests"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/server-timing": "^1.4.0",
    "drizzle-orm": "^0.44.2",
    "elysia": "^1.4.25",
    "zod": "catalog:"
  },
  "optionalDependencies": {
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.1",
    "typescript": "catalog:"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/apps/registry-packs"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://agentpacks.dev"
}
