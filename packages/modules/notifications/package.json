{
  "name": "@contractspec/module.notifications",
  "version": "1.48.0",
  "description": "Notification center module for ContractSpec applications",
  "keywords": [
    "contractspec",
    "notifications",
    "messaging",
    "channels",
    "email",
    "typescript"
  ],
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun build:types && bun build:bundle",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "dependencies": {
    "@contractspec/lib.schema": "workspace:*",
    "@contractspec/lib.contracts": "workspace:*",
    "@contractspec/lib.bus": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "@contractspec/tool.tsdown": "workspace:*",
    "typescript": "catalog:"
  },
  "exports": {
    ".": "./dist/index.js",
    "./channels": "./dist/channels/index.js",
    "./contracts": "./dist/contracts/index.js",
    "./entities": "./dist/entities/index.js",
    "./notifications.capability": "./dist/notifications.capability.js",
    "./notifications.feature": "./dist/notifications.feature.js",
    "./templates": "./dist/templates/index.js",
    "./*": "./*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./channels": "./dist/channels/index.js",
      "./contracts": "./dist/contracts/index.js",
      "./entities": "./dist/entities/index.js",
      "./notifications.feature": "./dist/notifications.feature.js",
      "./templates": "./dist/templates/index.js",
      "./*": "./*"
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/modules/notifications"
  },
  "homepage": "https://contractspec.io"
}
