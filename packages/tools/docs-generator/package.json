{
  "name": "@contractspec/tool.docs-generator",
  "version": "2.3.0",
  "type": "module",
  "description": "CLI tool for generating docs artifacts from ContractSpec specs and DocBlocks",
  "keywords": [
    "contractspec",
    "docs",
    "generator",
    "cli",
    "documentation"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "docs:generate": "bun src/index.ts generate --source \"../../../generated/docs\" --out \"../../../packages/bundles/library/src/components/docs/generated\" --content-root \"../../../generated/docs\"",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "bun test",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit",
    "dev": "contractspec-bun-build dev"
  },
  "bin": {
    "contractspec-docs": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@contractspec/lib.contracts-spec": "workspace:*",
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "typescript": "catalog:",
    "@contractspec/tool.bun": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.js",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/tools/docs-generator"
  },
  "homepage": "https://contractspec.io",
  "types": "./dist/index.d.ts"
}
