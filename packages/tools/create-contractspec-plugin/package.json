{
  "name": "@contractspec/tool.create-contractspec-plugin",
  "version": "2.8.0",
  "type": "module",
  "description": "CLI tool for creating ContractSpec plugins from templates",
  "keywords": [
    "contractspec",
    "plugin",
    "generator",
    "cli",
    "scaffold",
    "typescript"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "dev": "contractspec-bun-build dev",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "bun test --pass-with-no-tests",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "create-contractspec-plugin": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts",
    "./templates/example-generator": "./src/templates/example-generator.ts",
    "./utils": "./src/utils.ts"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "dependencies": {
    "@contractspec/lib.contracts-spec": "workspace:*",
    "@contractspec/lib.schema": "workspace:*",
    "@inquirer/prompts": "^8.3.0",
    "zod": "catalog:",
    "commander": "^14.0.3",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "typescript": "catalog:",
    "@contractspec/tool.bun": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.js",
        "default": "./dist/index.js"
      },
      "./templates/example-generator": {
        "types": "./dist/templates/example-generator.d.ts",
        "bun": "./dist/templates/example-generator.js",
        "node": "./dist/node/templates/example-generator.js",
        "default": "./dist/templates/example-generator.js"
      },
      "./utils": {
        "types": "./dist/utils.d.ts",
        "bun": "./dist/utils.js",
        "node": "./dist/node/utils.js",
        "default": "./dist/utils.js"
      }
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/tools/create-contractspec-plugin"
  },
  "homepage": "https://contractspec.io",
  "types": "./dist/index.d.ts"
}
