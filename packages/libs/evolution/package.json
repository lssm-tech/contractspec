  "devDependencies": {
    "@lssm/tool.tsdown": "workspace:*",
    "@lssm/tool.typescript": "workspace:*",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./*"
