{
  "name": "@lssm/lib.bus",
  "version": "2.0.0",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "workspace:*",
    "@lssm/tool.typescript": "workspace:*",
    "@types/express": "^5.0.3",
    "tsdown": "^0.17.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@lssm/lib.schema": "workspace:*",
    "@lssm/lib.contracts": "workspace:*"
  },
  "peerDependencies": {
    "elysia": "^1.4.18",
    "express": "^5.2.1",
    "next": "16.0.7"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./auditableBus": "./src/auditableBus.ts",
    "./eventBus": "./src/eventBus.ts",
    "./filtering": "./src/filtering.ts",
    "./inMemoryBus": "./src/inMemoryBus.ts",
    "./metadata": "./src/metadata.ts",
    "./subscriber": "./src/subscriber.ts",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./auditableBus": "./dist/auditableBus.js",
      "./eventBus": "./dist/eventBus.js",
      "./filtering": "./dist/filtering.js",
      "./inMemoryBus": "./dist/inMemoryBus.js",
      "./metadata": "./dist/metadata.js",
      "./subscriber": "./dist/subscriber.js",
      "./*": "./*"
    }
  }
}
