{
  "name": "@contractspec/lib.bus",
  "version": "2.1.0",
  "description": "Event bus and messaging primitives",
  "keywords": [
    "contractspec",
    "events",
    "messaging",
    "pubsub",
    "typescript"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "dev": "contractspec-bun-build dev",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "workspace:*",
    "@types/express": "^5.0.3",
    "typescript": "catalog:",
    "@contractspec/tool.bun": "workspace:*"
  },
  "dependencies": {
    "@contractspec/lib.schema": "workspace:*",
    "@contractspec/lib.contracts-spec": "workspace:*",
    "compare-versions": "^6.1.1"
  },
  "peerDependencies": {
    "elysia": "^1.4.25",
    "express": "^5.2.1",
    "next": "16.1.6"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./auditableBus": "./src/auditableBus.ts",
    "./eventBus": "./src/eventBus.ts",
    "./filtering": "./src/filtering.ts",
    "./inMemoryBus": "./src/inMemoryBus.ts",
    "./metadata": "./src/metadata.ts",
    "./subscriber": "./src/subscriber.ts"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.js",
        "browser": "./dist/browser/index.js",
        "default": "./dist/index.js"
      },
      "./auditableBus": {
        "types": "./dist/auditableBus.d.ts",
        "bun": "./dist/auditableBus.js",
        "node": "./dist/node/auditableBus.js",
        "browser": "./dist/browser/auditableBus.js",
        "default": "./dist/auditableBus.js"
      },
      "./eventBus": {
        "types": "./dist/eventBus.d.ts",
        "bun": "./dist/eventBus.js",
        "node": "./dist/node/eventBus.js",
        "browser": "./dist/browser/eventBus.js",
        "default": "./dist/eventBus.js"
      },
      "./filtering": {
        "types": "./dist/filtering.d.ts",
        "bun": "./dist/filtering.js",
        "node": "./dist/node/filtering.js",
        "browser": "./dist/browser/filtering.js",
        "default": "./dist/filtering.js"
      },
      "./inMemoryBus": {
        "types": "./dist/inMemoryBus.d.ts",
        "bun": "./dist/inMemoryBus.js",
        "node": "./dist/node/inMemoryBus.js",
        "browser": "./dist/browser/inMemoryBus.js",
        "default": "./dist/inMemoryBus.js"
      },
      "./metadata": {
        "types": "./dist/metadata.d.ts",
        "bun": "./dist/metadata.js",
        "node": "./dist/node/metadata.js",
        "browser": "./dist/browser/metadata.js",
        "default": "./dist/metadata.js"
      },
      "./subscriber": {
        "types": "./dist/subscriber.d.ts",
        "bun": "./dist/subscriber.js",
        "node": "./dist/node/subscriber.js",
        "browser": "./dist/browser/subscriber.js",
        "default": "./dist/subscriber.js"
      }
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/bus"
  },
  "homepage": "https://contractspec.io"
}
