    "./intent/detector": "./dist/intent/detector.mjs",
    "./logging": "./dist/logging/index.mjs",
    "./metrics": "./dist/metrics/index.mjs",
    "./pipeline/evolution-pipeline": "./dist/pipeline/evolution-pipeline.mjs",
