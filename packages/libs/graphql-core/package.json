{
  "name": "@lssm/lib.graphql-core",
  "version": "1.42.5",
  "description": "Shared GraphQL core: Pothos builder factory, scalars, tracing & complexity",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "tsdown",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pothos/core": "^4.9.1",
    "@pothos/plugin-complexity": "^4.1.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-relay": "^4.4.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.5"
  },
  "peerDependencies": {
    "graphql": ">=16.0.0"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "type": "module",
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./*": "./*"
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/graphql-core"
  }
}
