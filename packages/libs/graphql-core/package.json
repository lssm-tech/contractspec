{
  "name": "@lssm/lib.graphql-core",
  "version": "0.1.0",
  "private": true,
  "description": "Shared GraphQL core: Pothos builder factory, scalars, tracing & complexity",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pothos/core": "^4.9.1",
    "@pothos/plugin-complexity": "^4.1.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-relay": "^4.4.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.5"
  },
  "peerDependencies": {
    "graphql": ">=16.0.0"
  },
  "publishConfig": {
    "access": "restricted",
    "exports": {
      ".": "./dist/index.js",
      "./*": "./*"
    }
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "workspace:*",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "module": "./dist/index.js",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./*"
  }
}
