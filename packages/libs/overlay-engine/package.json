{
  "name": "@lssm/lib.overlay-engine",
  "version": "1.41.1",
  "description": "Runtime overlay engine for ContractSpec personalization and adaptive UI rendering.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --canary",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "bun run"
  },
  "dependencies": {
    "@lssm/lib.contracts": "workspace:*",
    "fast-json-stable-stringify": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "workspace:*",
    "@lssm/tool.typescript": "workspace:*",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./merger": "./src/merger.ts",
    "./react": "./src/react.ts",
    "./registry": "./src/registry.ts",
    "./runtime": "./src/runtime.ts",
    "./signer": "./src/signer.ts",
    "./spec": "./src/spec.ts",
    "./types": "./src/types.ts",
    "./validator": "./src/validator.ts",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./merger": "./dist/merger.js",
      "./react": "./dist/react.js",
      "./registry": "./dist/registry.js",
      "./runtime": "./dist/runtime.js",
      "./signer": "./dist/signer.js",
      "./spec": "./dist/spec.js",
      "./types": "./dist/types.js",
      "./validator": "./dist/validator.js",
      "./*": "./*"
    }
  }
}
