{
  "name": "@lssm/lib.graphql-prisma",
  "version": "1.41.1",
  "description": "Pothos + Prisma builder factory with injectable client/DMMF",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "tsdown",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lssm/lib.schema": "workspace:*",
    "@pothos/core": "^4.9.1",
    "@pothos/plugin-complexity": "^4.1.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-prisma": "^4.14.0",
    "@pothos/plugin-relay": "^4.4.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.5"
  },
  "peerDependencies": {
    "graphql": ">=16.0.0"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "module": "./dist/index.js",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./*": "./*"
    }
  }
}
