{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@contractspec/lib.bus": [
        "../bus/dist/index.d.ts"
      ],
      "@contractspec/lib.bus/*": [
        "../bus/dist/*"
      ],
      "@contractspec/lib.schema": [
        "../schema/dist/index.d.ts"
      ],
      "@contractspec/lib.schema/*": [
        "../schema/dist/*"
      ],
      "@contractspec/lib.contracts": [
        "../contracts/dist/index.d.ts"
      ],
      "@contractspec/lib.contracts/*": [
        "../contracts/dist/*"
      ],
      "@contractspec/lib.knowledge": [
        "../knowledge/dist/index.d.ts"
      ],
      "@contractspec/lib.knowledge/*": [
        "../knowledge/dist/*"
      ],
      "@contractspec/lib.overlay-engine": [
        "../overlay-engine/dist/index.d.ts"
      ],
      "@contractspec/lib.overlay-engine/*": [
        "../overlay-engine/dist/*"
      ],
      "@contractspec/tool.typescript/*": [
        "../../tools/typescript/dist/*"
      ],
      "@contractspec/tool.bun/*": [
        "../../tools/bun/dist/*"
      ]
    }
  }
}
