    "@opentelemetry/api": "^1.9.0"
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "*",
    "@lssm/tool.typescript": "*",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./*"
  }
