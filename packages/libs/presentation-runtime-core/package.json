{
  "name": "@contractspec/lib.presentation-runtime-core",
  "version": "1.45.1",
  "description": "Core presentation runtime for contract-driven UIs",
  "keywords": [
    "contractspec",
    "presentation",
    "runtime",
    "ui",
    "core",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit -p tsconfig.json",
    "clean": "rimraf dist .turbo",
    "dev": "bun run build:bundle --watch",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "peerDependencies": {
    "typescript": "^5.9.0"
  },
  "devDependencies": {
    "@contractspec/tool.tsdown": "workspace:*",
    "@contractspec/tool.typescript": "workspace:*",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./metro.cjs": "./src/metro.cjs",
      "./next.mjs": "./src/next.mjs"
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/presentation-runtime-core"
  },
  "homepage": "https://contractspec.io"
}
