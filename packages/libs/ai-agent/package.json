{
  "name": "@lssm/lib.ai-agent",
  "version": "0.2.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "vitest run"
  },
  "dependencies": {
    "@lssm/lib.contracts": "*"
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "*",
    "@lssm/tool.typescript": "*",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./approval": "./dist/approval/index.js",
    "./approval/workflow": "./dist/approval/workflow.js",
    "./memory": "./dist/memory/index.js",
    "./memory/in-memory": "./dist/memory/in-memory.js",
    "./memory/manager": "./dist/memory/manager.js",
    "./runner": "./dist/runner.js",
    "./spec": "./dist/spec.js",
    "./tools": "./dist/tools/index.js",
    "./tools/executor": "./dist/tools/executor.js",
    "./types": "./dist/types.js",
    "./*": "./*"
  }
}
