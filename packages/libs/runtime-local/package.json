      "./graphql/local-client": "./dist/graphql/local-client.js",
      "./runtime/services": "./dist/runtime/services.js",
      "./storage/indexeddb": "./dist/storage/indexeddb.js",
      "./utils/id": "./dist/utils/id.js",
      "./*": "./*"
    }
  }
}




