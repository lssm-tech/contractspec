{
  "name": "@lssm/lib.contracts-contractspec-studio",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "devDependencies": {
    "@lssm/tool.tsdown": "*",
    "@lssm/tool.typescript": "*",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@lssm/lib.contracts": "*",
    "@lssm/lib.schema": "*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": "./dist/index.js",
    "./integrations": "./dist/integrations/index.js",
    "./interactions": "./dist/interactions/index.js",
    "./interactions/commands": "./dist/interactions/commands/index.js",
    "./interactions/queries": "./dist/interactions/queries/index.js",
    "./lifecycle": "./dist/lifecycle/index.js",
    "./studio": "./dist/studio/index.js",
    "./templates": "./dist/templates/index.js",
    "./templates/messaging": "./dist/templates/messaging.js",
    "./templates/recipes": "./dist/templates/recipes.js",
    "./templates/todos": "./dist/templates/todos.js",
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./integrations": "./dist/integrations/index.js",
      "./interactions": "./dist/interactions/index.js",
      "./interactions/commands": "./dist/interactions/commands/index.js",
      "./interactions/queries": "./dist/interactions/queries/index.js",
      "./lifecycle": "./dist/lifecycle/index.js",
      "./studio": "./dist/studio/index.js",
      "./templates": "./dist/templates/index.js",
      "./templates/messaging": "./dist/templates/messaging.js",
      "./templates/recipes": "./dist/templates/recipes.js",
      "./templates/todos": "./dist/templates/todos.js",
      "./*": "./*"
    }
  }
}
