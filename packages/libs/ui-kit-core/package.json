{
  "name": "@lssm/lib.ui-kit-core",
  "version": "1.12.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun run build:bundle && bun run build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit",
    "dev": "bun run build:bundle --watch",
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint ui --fix",
    "lint:check": "eslint ui"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "4.1.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils.ts",
    "./*": "./*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./utils": "./dist/utils.js",
      "./*": "./*"
    }
  }
}
