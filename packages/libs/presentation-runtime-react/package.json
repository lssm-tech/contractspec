{
  "name": "@lssm/lib.presentation-runtime-react",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
