{
  "name": "@lssm/lib.design-system",
  "version": "1.43.4",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun build:types && bun build:bundle",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit -p tsconfig.build.json",
    "dev": "bun run build:bundle --watch",
    "registry:build": "bun run scripts/build-registry.ts",
    "test": "bun test src/**/*.test.ts src/**/*.test.tsx",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "tree-shake": true,
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@lssm/lib.ai-agent": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.ui-kit": "workspace:*",
    "@lssm/lib.ui-kit-web": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "catalog:",
    "next": "catalog:"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "@types/node": "^24.9.0",
    "@types/react-dom": "^19.0.14",
    "postcss": "catalog:build",
    "tailwindcss": "catalog:build",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./*": "./*"
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/design-system"
  },
  "homepage": "https://contractspec.io"
}
