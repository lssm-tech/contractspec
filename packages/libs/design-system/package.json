{
  "name": "@lssm/lib.design-system",
  "version": "1.12.0",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit -p tsconfig.build.json",
    "dev": "bun run build:bundle --watch",
    "registry:build": "bun run scripts/build-registry.ts",
    "test": "bun test src/**/*.test.ts src/**/*.test.tsx",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "tree-shake": true,
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@lssm/lib.ai-agent": "workspace:*",
    "@lssm/lib.contracts": "workspace:*",
    "@lssm/lib.ui-kit": "workspace:*",
    "@lssm/lib.ui-kit-web": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.535.0",
    "react": "19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@lssm/tool.typescript": "workspace:*",
    "@lssm/tool.tsdown": "workspace:*",
    "@types/node": "^24.9.0",
    "@types/react-dom": "^19.0.14",
    "postcss": "^8.5",
    "tailwindcss": "4.1.18",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3"
  },
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./*": "./*"
    }
  }
}
