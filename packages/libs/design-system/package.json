{
  "name": "@contractspec/lib.design-system",
  "version": "1.55.0",
  "description": "Design tokens and theming primitives",
  "keywords": [
    "contractspec",
    "design-system",
    "tokens",
    "theming",
    "ui",
    "typescript"
  ],
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun build:types && bun build:bundle",
    "build:bundle": "tsdown",
    "build:types": "tsc --noEmit -p tsconfig.build.json",
    "dev": "bun run build:bundle --watch",
    "registry:build": "bun run scripts/build-registry.ts",
    "test": "bun test",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "tree-shake": true,
  "dependencies": {
    "@contractspec/lib.ai-agent": "workspace:*",
    "@contractspec/lib.contracts": "workspace:*",
    "@contractspec/lib.ui-kit": "workspace:*",
    "@contractspec/lib.ui-kit-web": "workspace:*",
    "@hookform/resolvers": "5.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-hook-form": "^7.70.0",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@contractspec/tool.tsdown": "workspace:*",
    "@contractspec/tool.typescript": "workspace:*",
    "@types/node": "^25.0.6",
    "@types/react-dom": "^19.0.14",
    "postcss": "catalog:build",
    "postcss-load-config": "^6.0.1",
    "react-native": "^0.81.4",
    "react-native-css": "^3.0.0",
    "tailwindcss": "catalog:build",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./package.json": "./package.json"
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/design-system"
  },
  "homepage": "https://contractspec.io"
}
