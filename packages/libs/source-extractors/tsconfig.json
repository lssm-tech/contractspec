{
  "extends": "@contractspec/tool.typescript/react-library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__fixtures__/**/*", "src/**/*.test.ts", "src/__snapshots__/**/*"]
}
