{
  "name": "@contractspec/app.worker-contractspec",
  "version": "1.0.50",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "dev": "bun run --watch src/server.ts",
    "export-schema": "bun run src/graphql/schema-export.ts",
    "ssl:gen": "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout certs/key.pem -out certs/cert.pem -config local/openssl.cnf",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/worker src/index.ts",
    "start": "./server"
  },
  "dependencies": {
    "@contractspec/bundle.studio": "workspace:*",
    "@pothos/core": "^4.10.1",
    "@pothos/plugin-complexity": "^4.1.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-prisma": "^4.14.0",
    "@pothos/plugin-relay": "^4.4.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "@contractspec/lib.jobs": "workspace:*",
    "@contractspec/lib.logger": "workspace:*"
  },
  "devDependencies": {},
  "module": "src/index.ts",
  "type": "module"
}
